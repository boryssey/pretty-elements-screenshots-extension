{
  "manifest_version": 3,
  "name": "Pretty Screenshots - Capture any Area, Element, or Full Page easily",
  "version": "1.0",
  "description": "An extension that allows you to make pretty HTML Element screenshots",
  "permissions": ["storage", "activeTab", "scripting", "contextMenus"],
  "host_permissions": ["http://localhost/*"],
  "optional_host_permissions": ["*://*/"],
  "action": {
    "enable_screenshot_overlay": "Enable Screenshot Overlay"
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  }
}