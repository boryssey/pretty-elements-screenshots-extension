{
  "manifest_version": 3,
  "name": "Pretty HTML Elements Screenshots",
  "version": "1.0",
  "description": "An extension that allows you to make pretty HTML Element screenshots",
  "permissions": ["storage", "activeTab", "scripting", "contextMenus"],
  "host_permissions": ["http://localhost/*", "https://*/"],
  "action": {
    "enable_screenshot_overlay": "Enable Screenshot Overlay"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["/contentStyles.css"],
      "matches": ["http://localhost/*", "<all_urls>"]
    }
  ]
}