{
  "manifest_version": 3,
  "name": "Pretty HTML Elements Screenshots",
  "version": "1.0",
  "description": "An extension that allows you to make pretty HTML Element screenshots",
  "permissions": ["storage", "cookies"],
  "host_permissions": ["http://localhost/*", "https://*/"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["http://localhost/*"],
      "js": ["content.js"]
    }
  ]
}